@using MvcCv.Models.Entity
@model List<TblAdmin>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using MvcCv.Models.Entity



<br />
<h2>Admin İşlemleri</h2>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kullanıcı Adı</th>
        <th>Düzenle</th>
        <th>Kaldır</th>

    </tr>
    @foreach (var p in Model)
    {
        <tr>
            <td>@p.ID</td>
            <td>@p.KullaniciAdi</td>
  
            <td><a href="/Admin/AdminDuzenle/@p.ID" class="btn btn-warning">Düzenle</a></td>
            <td><a href="/Admin/AdminSil/@p.ID" class="btn btn-danger">Sil</a></td>
        </tr>
    }

</table>
<a href="/Admin/AdminEkle/" class="btn btn-primary">Yeni Kullanıcı Ekle</a>


